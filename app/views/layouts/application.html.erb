<!DOCTYPE html>
<html>
  <head>
    <title>Spielekiste</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= current_user.email %>
      <%= link_to "Profil editieren", edit_user_registration_path %>
      <%= link_to "Abmelden", destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= link_to "Registrieren", new_user_registration_path %>
      <%= link_to "Anmelden", new_user_session_path %>
    <% end %>










    <%= yield %>
  </body>
</html>
